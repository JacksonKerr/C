void quickSort(int *a, int len) {
    int pivot = a[0];
    int lIndex = 0;
    int rIndex = len-1;
    int temp;
    if (len > 2) {
        for (;;) {
            while (a[rIndex] < pivot) {
                lIndex++;
            }
            while (a[lIndex] > pivot) {
                rIndex--;
            }
            if (lIndex < rIndex) {
                temp = a[rIndex];
                a[rIndex] = a[lIndex];
                a[lIndex] = temp;
            } else {
                break;
            }
        }
        quickSort(*a, len/2-1);
        quickSort(&a[len/2], len/2-1);
    }
    return;
}
